<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_pp/models/rules">
    <fieldset name="general">
        <field
                name="task"
                type="text"
                label="COM_PP_FORM_TASK_TITLE_LABEL"
                description="COM_PP_FORM_TASK_TITLE_DESC"
                hint="COM_PP_FORM_TASK_TITLE_HINT"
                autocomplete="off"
                required="true"
                class="span12"
        />
        <field
                name="result"
                type="text"
                label="COM_PP_FORM_TASK_RESULT_LABEL"
                description="COM_PP_FORM_TASK_RESULT_DESC"
                hint="COM_PP_FORM_TASK_RESULT_HINT"
                autocomplete="off"
                class="span12"
        />
        <field
                name="typeID"
                type="Tasktype"
                label="COM_PP_FORM_TASK_TYPE_LABEL"
                description="COM_PP_FORM_TASK_TYPE_DESC"
                required="true"
                class="span12"
        />
        <field
                name="projectID"
                type="Project"
                label="COM_PP_FORM_TASK_PROJECT_LABEL"
                description="COM_PP_FORM_TASK_PROJECT_DESC"
                default="11"
                required="true"
                class="span12"
        />
        <field
                name="sectionID"
                type="Sectionchildren"
                label="COM_PP_FORM_TASK_SECTION_LABEL"
                description="COM_PP_FORM_TASK_SECTION_DESC"
                required="true"
                class="span12"
                onchange="getDirector();"
        />
        <field
                name="objectID"
                type="Object"
                label="COM_PP_FORM_TASK_OBJECT_LABEL"
                description="COM_PP_FORM_TASK_OBJECT_DESC"
                class="span12"
                default=""
        >
                <option value="">COM_PP_FILTER_SELECT_OBJECT</option>
        </field>
        <field
                name="managerID"
                type="manager"
                label="COM_PP_FORM_TASK_MANAGER_LABEL"
                description="COM_PP_FORM_TASK_MANAGER_DESC"
                required="true"
                class="span12"
        />
        <field
                name="directorID"
                type="director"
                label="COM_PP_FORM_TASK_DIRECTOR_LABEL"
                description="COM_PP_FORM_TASK_DIRECTOR_DESC"
                required="true"
                class="span12"
        />
        <field
                name="contractorID"
                type="Contractor"
                label="COM_PP_FORM_TASK_CONTRACTOR_LABEL"
                description="COM_PP_FORM_TASK_CONTRACTOR_DESC"
                class="span12"
        >
                <option value="">COM_PP_FILTER_SELECT_CONTRACTOR</option>
        </field>
        <field
                name="date_start"
                type="calendar"
                label="COM_PP_FORM_TASK_DATE_START_LABEL"
                description="COM_PP_FORM_TASK_DATE_START_DESC"
                required="true"
                filter="none"
                format="%d.%m.%Y"
        />
        <field
                name="date_end"
                type="calendar"
                label="COM_PP_FORM_TASK_DATE_END_LABEL"
                description="COM_PP_FORM_TASK_DATE_END_DESC"
                required="true"
                filter="none"
                format="%d.%m.%Y"
        />
        <field
                name="id"
                type="hidden"
        />
    </fieldset>
</form>