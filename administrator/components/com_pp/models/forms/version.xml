        <field
                name="version"
                type="text"
                label="COM_PP_FORM_VERSION_VERSION_LABEL"
                description="COM_PP_FORM_VERSION_VERSION_DESC"
                hint="COM_PP_FORM_VERSION_VERSION_HINT"
                required="true"
                maxlength="255"
                autocomplete="false"
                class="span12"
        />
        <field
                name="dat"
                type="calendar"
                label="COM_PP_FORM_VERSION_DATE_LABEL"
                description="COM_PP_FORM_VERSION_DATE_DESC"
                filter="none"
                required="true"
                class="span12"
                format="%d.%m.%Y"
        />
        <field
                name="id"
                type="hidden"
        />
    </fieldset>
</form>