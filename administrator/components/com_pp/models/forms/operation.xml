<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_pp/models/rules">
    <fieldset name="general">
        <field
                name="task"
                type="text"
                label="COM_PP_FORM_OPERATION_TITLE_LABEL"
                description="COM_PP_FORM_OPERATION_TITLE_DESC"
                hint="COM_PP_FORM_OPERATION_TITLE_HINT"
                autocomplete="off"
                required="true"
                class="span12"
        />
        <field
                name="result"
                type="text"
                label="COM_PP_FORM_OPERATION_RESULT_LABEL"
                description="COM_PP_FORM_OPERATION_RESULT_DESC"
                hint="COM_PP_FORM_OPERATION_RESULT_HINT"
                autocomplete="off"
                class="span12"
        />
        <field
                name="managerID"
                type="manager"
                label="COM_PP_FORM_OPERATION_MANAGER_LABEL"
                description="COM_PP_FORM_OPERATION_MANAGER_DESC"
                required="true"
                class="span12"
        />
