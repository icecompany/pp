<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_pp/models/rules">
    <fieldset name="general">
        <field
                name="parent_title"
                label="COM_PP_FORM_OPERATION_PARENT_TITLE_LABEL"
                description="COM_PP_FORM_OPERATION_PARENT_TITLE_DESC"
                readonly="true"
                class="span12"
        />
        <field
                name="task"
                type="text"
                label="COM_PP_FORM_OPERATION_TITLE_LABEL"
                description="COM_PP_FORM_OPERATION_TITLE_DESC"
                hint="COM_PP_FORM_OPERATION_TITLE_HINT"
                autocomplete="off"
                required="true"
                class="span12"
        />
        <field
                name="result"
                type="text"
                label="COM_PP_FORM_OPERATION_RESULT_LABEL"
                description="COM_PP_FORM_OPERATION_RESULT_DESC"
                hint="COM_PP_FORM_OPERATION_RESULT_HINT"
                autocomplete="off"
                class="span12"
        />
        <field
                name="managerID"
                type="manager"
                label="COM_PP_FORM_OPERATION_MANAGER_LABEL"
                description="COM_PP_FORM_OPERATION_MANAGER_DESC"
                required="true"
                class="span12"
        />
        <field
                name="directorID"
                type="director"
                label="COM_PP_FORM_OPERATION_DIRECTOR_LABEL"
                description="COM_PP_FORM_OPERATION_DIRECTOR_DESC"
                required="true"
                class="span12"
        />
        <field
                name="date_operation"
                type="calendar"
                label="COM_PP_FORM_OPERATION_DATE_OPERATION_LABEL"
                description="COM_PP_FORM_OPERATION_DATE_OPERATION_DESC"
                required="true"
                filter="none"
                format="%d.%m.%Y"
        />
        <field
                name="id"
                type="hidden"
        />
        <field
                name="taskID"
                type="hidden"
        />
    </fieldset>
    <fieldset name="advanced">
        <field
                name="repeat"
                type="list"
                label="COM_PP_FORM_OPERATION_REPEAT_LABEL"
                description="COM_PP_FORM_OPERATION_REPEAT_DESC"
                class="span12"
                default=""
                >
            <option value="">COM_PP_OPERATION_REPEAT_NO_REPEAT</option>
            <option value="day">COM_PP_OPERATION_REPEAT_EVERYDAY</option>
            <option value="week">COM_PP_OPERATION_REPEAT_WEEKLY</option>
            <option value="month">COM_PP_OPERATION_REPEAT_MONTHLY</option>
        </field>
    </fieldset>
</form>