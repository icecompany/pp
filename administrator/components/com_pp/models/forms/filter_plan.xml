<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_prj/models/fields">
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PP_FILTER_TASKS"
                description="COM_PP_FILTER_TASKS"
                hint="COM_PP_FILTER_TASKS"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="project"
                type="Project"
                onchange="this.form.submit();"
                >
            <option value="">COM_PP_FILTER_SELECT_PROJECT</option>
        </field>
        <field
                name="object"
                type="Object"
                onchange="this.form.submit();"
                >
            <option value="">COM_PP_FILTER_SELECT_OBJECT</option>
        </field>
        <field
                name="section"
                type="Section"
                onchange="this.form.submit();"
                >
            <option value="">COM_PP_FILTER_SELECT_SECTION</option>
        </field>
        <field
                name="sub_section"
                type="Subsection"
                onchange="this.form.submit();"
                >
            <option value="">COM_PP_FILTER_SELECT_SUB_SECTION</option>
        </field>
        <field
                name="manager"
                type="manager"
                onchange="this.form.submit();"
                >
            <option value="">COM_MKV_FILTER_SELECT_EXECUTOR</option>
        </field>
        <field
                name="director"
                type="director"
                onchange="this.form.submit();"
                >
            <option value="">COM_MKV_FILTER_SELECT_RESPONSIBLE</option>
        </field>
        <field
                name="status"
                type="list"
                onchange="this.form.submit();"
                multiple="true"
                >
            <option value="-2">COM_PP_TASK_STATUS_-2</option>
            <option value="1">COM_PP_TASK_STATUS_1</option>
            <option value="2">COM_PP_TASK_STATUS_2</option>
            <option value="3">COM_PP_TASK_STATUS_3</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                onchange="this.form.submit();"
                default="status ASC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="status ASC">COM_MKV_SORTING_STATUS_ASC</option>
            <option value="status DESC">COM_MKV_SORTING_STATUS_DESC</option>
            <option value="manager ASC">COM_MKV_SORTING_EXECUTOR_ASC</option>
            <option value="manager DESC">COM_MKV_SORTING_EXECUTOR_DESC</option>
            <option value="director ASC">COM_MKV_SORTING_RESPONSIBLE_ASC</option>
            <option value="director DESC">COM_MKV_SORTING_RESPONSIBLE_DESC</option>
            <option value="contractor ASC">COM_MKV_SORTING_CONTRACTOR_ASC</option>
            <option value="contractor DESC">COM_MKV_SORTING_CONTRACTOR_DESC</option>
            <option value="t.date_start ASC">COM_MKV_SORTING_DATE_START_ASC</option>
            <option value="t.date_start DESC">COM_MKV_SORTING_DATE_START_DESC</option>
            <option value="t.date_end ASC">COM_MKV_SORTING_DATE_END_ASC</option>
            <option value="t.date_end DESC">COM_MKV_SORTING_DATE_END_DESC</option>
            <option value="t.id ASC">COM_PP_SORTING_ID_ASC</option>
            <option value="t.id DESC">COM_PP_SORTING_ID_DESC</option>
        </field>
    </fields>
</form>