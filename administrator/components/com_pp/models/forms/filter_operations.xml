<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_prj/models/fields">
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PP_FILTER_TASKS"
                description="COM_PP_FILTER_TASKS"
                hint="COM_PP_FILTER_TASKS"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="date"
                type="calendar"
                label="COM_PP_FILTER_SELECT_DATE"
                description="COM_PP_FILTER_SELECT_DATE"
                hint="COM_PP_FILTER_SELECT_DATE"
                format="%d.%m.%Y"
                onchange="this.form.submit();"
                filter="none"
        />
        <field
                name="date_2"
                type="calendar"
                label="COM_PP_FILTER_SELECT_DATE_2"
                description="COM_PP_FILTER_SELECT_DATE_2"
                hint="COM_PP_FILTER_SELECT_DATE_2"
                format="%d.%m.%Y"
                onchange="this.form.submit();"
                filter="none"
        />
        <field
                name="manager"
                type="manager"
                label="COM_PP_FILTER_SELECT_MANAGER"
                description="COM_PP_FILTER_SELECT_MANAGER"
                onchange="this.form.submit();"
        >
            <option value="">COM_PP_FILTER_SELECT_MANAGER</option>
        </field>
        <field
                name="director"
                type="director"
                label="COM_PP_FILTER_SELECT_DIRECTOR"
                description="COM_PP_FILTER_SELECT_DIRECTOR"
                onchange="this.form.submit();"
        >
            <option value="">COM_PP_FILTER_SELECT_DIRECTOR</option>
        </field>
        <field
                name="status"
                type="list"
                label="COM_PP_FILTER_SELECT_STATUS"
                description="COM_PP_FILTER_SELECT_STATUS"
                onchange="this.form.submit();"
                multiple="true"
        >
            <option value="-2">COM_PP_TASK_STATUS_-2</option>
            <option value="1">COM_PP_TASK_STATUS_1</option>
            <option value="2">COM_PP_TASK_STATUS_2</option>
            <option value="3">COM_PP_TASK_STATUS_3</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_PP_FILTER_SELECT_FULL_ORDERING"
                description="COM_PP_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="o.ordering asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="manager ASC">COM_PP_SORTING_MANAGER_ASC</option>
            <option value="manager DESC">COM_PP_SORTING_MANAGER_DESC</option>
            <option value="director ASC">COM_PP_SORTING_DIRECTOR_ASC</option>
            <option value="director DESC">COM_PP_SORTING_DIRECTOR_DESC</option>
            <option value="status ASC">COM_PP_SORTING_STATUS_ASC</option>
            <option value="status DESC">COM_PP_SORTING_STATUS_DESC</option>
            <option value="o.date_operation ASC">COM_PP_SORTING_DATE_ASC</option>
            <option value="o.date_operation DESC">COM_PP_SORTING_DATE_DESC</option>
            <option value="o.id ASC">COM_PP_SORTING_ID_ASC</option>
            <option value="o.id DESC">COM_PP_SORTING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_PP_FILTER_SELECT_LIMIT"
                description="COM_PP_FILTER_SELECT_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>