<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_PP_FILTER_SECTIONS"
                description="COM_PP_FILTER_SECTIONS"
                hint="COM_PP_FILTER_SECTIONS"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="manager"
                type="director"
                label="COM_PP_FILTER_SELECT_DIRECTOR"
                description="COM_PP_FILTER_SELECT_DIRECTOR"
                onchange="this.form.submit();"
                >
            <option value="">COM_PP_FILTER_SELECT_DIRECTOR</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_PP_FILTER_SELECT_FULL_ORDERING"
                description="COM_PP_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="s.ordering ASC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="manager ASC">COM_MKV_SORTING_RESPONSIBLE_ASC</option>
            <option value="manager DESC">COM_MKV_SORTING_RESPONSIBLE_DESC</option>
            <option value="s.ordering ASC">COM_PP_SORTING_ORDERING_ASC</option>
            <option value="s.ordering DESC">COM_PP_SORTING_ORDERING_DESC</option>
            <option value="s.id ASC">COM_MKV_SORTING_ID_ASC</option>
            <option value="s.id DESC">COM_MKV_SORTING_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_PP_FILTER_SELECT_LIMIT"
                description="COM_PP_FILTER_SELECT_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>