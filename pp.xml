<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.8" method="upgrade">
	<name>COM_PP</name>
	<creationDate>18.03.2020</creationDate>
	<author>Anton Sharikov</author>
	<authorEmail>xakepok@xakepok.com</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.1.1-patch.1</version>
	<description>COM_PP_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on update -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Media files -->
	<media folder="media/com_pp" destination="com_pp">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<!-- Front-end files -->
	<files folder="components/com_pp">
		<filename>pp.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="tasks">COM_PP_MENU_TASKS</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu view="tasks">COM_PP_MENU_TASKS</menu>
			<menu view="sections">COM_PP_MENU_SECTIONS</menu>
			<menu view="objects">COM_PP_MENU_OBJECTS</menu>
			<menu view="task_types">COM_PP_MENU_TASK_TYPES</menu>
		</submenu>

		<!-- Core files -->
		<files folder="administrator/components/com_pp">
			<filename>pp.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>LICENSE.txt</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="pp">https://www.example.com/pp.xml</server>
	</updateservers>
</extension>
